{
  "name": "archerage-addon-manager",
  "private": true,
  "version": "0.0.0",
  "main": "main.cjs",
  "scripts": {
    "dist:portable": "electron-builder --win portable",
    "dist": "electron-builder",
    "build:electron": "vite build && electron-builder",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=200",
    "preview": "vite preview",
    "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "electron:build": "vite build && electron ."
  },
  "build": {
    "icon": "assets/icon.ico",
    "appId": "com.archerage.addonmanager",
    "productName": "ArcheRage-Addon-Manager",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.js",
      "package.json",
      ".env"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.4",
    "dotenv": "^17.2.0",
    "googleapis": "^150.0.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
